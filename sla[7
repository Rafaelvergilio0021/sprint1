    function renderProducts() {
      // (funÃ§Ã£o para gerar os produtos em cada container)
    }

    window.onload = () => {
      renderProducts();
      setTimeout(() => document.querySelectorAll('.fade-in').forEach(el => el.classList.add('show')), 300);
    };
    function renderProducts() {
  for (const categoria in produtos) {
    const container = document.getElementById(`${categoria}Container`);
    produtos[categoria].forEach(produto => {
      container.innerHTML += `
        <div class="drink-card">
          <img src="${produto.imagem}" alt="${produto.nome}">
          <div class="drink-content">
            <h2>${produto.nome}</h2>
            <p class="price">R$ ${produto.preco.toLocaleString('pt-BR')}</p>
            <button class="buy-btn" onclick="addToCart('${produto.nome}', ${produto.preco})">Comprar</button>
          </div>
        </div>
      `;
    });
  }
}
